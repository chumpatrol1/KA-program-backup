var angle = 68;
var length = 200;

stroke(0, 115, 255);
strokeWeight(2);
line(100, 300, 300, 300);
line(100, 300, 100 + length * cos(angle), 300 - length * sin(angle));

var h = 25;
var x = h / tan(angle);

stroke(100);
strokeWeight(1);
line(100 + x, 300, 100 + x, 300 - h);

textAlign(LEFT, CENTER);
fill(0);
text("Angle", 100 + x, 300 - h/2);
