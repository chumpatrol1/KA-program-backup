/*******************************************************
 *      Main loop
 * This is where the system is updated.
*******************************************************/

draw = function() {
    background(BACKGROUND);
    system.draw();
    gui.draw();
    toolbar.draw();
    
    if (running) {
        system.update();
    }
};

/*******************************************************
 * Event handling
********************************************************/

mousePressed = function() {
    system.mousePressed();
    gui.mousePressed();
    toolbar.mousePressed();
};

mouseReleased = function() {
    system.mouseReleased();
    gui.mouseReleased();
    toolbar.mouseReleased();
};

mouseDragged = function() {
    system.mouseDragged();
    toolbar.mouseDragged();
};

mouseOut = function() {
    system.mouseReleased();
};

keyPressed = function() {
    if (keyCode === 32) {
        running = !running;
    }
};
