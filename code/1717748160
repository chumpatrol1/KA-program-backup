    new Atom("O", -1.447, -0.468, 4.791),
    new Atom("C", 1.255, 0.414, 3.255),
    new Atom("C", 1.583, -0.367, 4.529),
    new Atom("C", 1.773, 1.851, 3.335),
    new Atom("S", 1.881, -0.451, 1.746),
    new Atom("C", 0.428, -1.548, 1.493),
